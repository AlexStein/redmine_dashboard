/ ISSUE CARD
%div.rdb-card
  %div{:class => "rdb-priority rdb-priority-#{issue.priority.position}" }
    %header.rdb-card-header
      %div.rdb-card-title
        = render :partial => 'rdb_dashboard/issues/issue_menu', :locals => { :issue => issue }

      %div
        %div.rdb-card-header-data
          %div.rdb-card-property.rdb-card-tracker= issue.tracker

    %div.rdb-card-progress
      %div.rdb-card-progress-bar{:style => "width: #{issue.done_ratio}%;" }

    %div.rdb-card-content
      %div.rdb-card-subject.rdb-property-subject= issue.subject
      - if issue.fixed_version
        %div.rdb-card-property.rdb-card-version= issue.fixed_version.name
      - if issue.assigned_to
        %div.rdb-card-property.rdb-card-assignee= issue.assigned_to.name
      - if issue.category
        %div.rdb-card-property.rdb-card-category= issue.category.name
/ ISSUE CARD END
